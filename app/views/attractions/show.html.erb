<h2><%= @attraction.name %> Details</h2>

Name: <%=@attraction.name %><br>
Total Number of Users: <%=@attraction.name %><br>
Ticket Requirement: <%=@attraction.tickets %><br>
Height Requirement: <%=@attraction.min_height %><br>
Nausea Rating: <%=@attraction.nausea_rating %><br>
Happiness Rating: <%=@attraction.happiness_rating %><br>
<br>

<% if user_is_admin? %>
	<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
	<%= form_tag ride_path do %>
		<%= hidden_field_tag :'ride[user_id]', current_user %>
		<%= hidden_field_tag :'ride[attraction_id]', @attraction.id %>
		<input type="submit" value="Go on this ride">
	<% end %>
<% end %>
