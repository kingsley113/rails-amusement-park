<h2>New User Signup</h2>

<div>
	<%= form_for @user do |f| %>
		Name<br>
		<%= f.text_field :name %><br>
		Height (inches)<br>
		<%= f.number_field :height %><br>
		How happy are you? (1-5)<br>
		<%= f.number_field :happiness %><br>
		How nauseous are you? (1-5)<br>
		<%= f.number_field :nausea %><br>
		How much coin do you have on you?<br>
		<%= f.number_field :tickets %><br>
		Are you a theme park owner? <%= f.check_box :admin %><br>
		Password<br>
		<%= f.password_field :password %><br>
		<br>
		<%= f.submit 'Create User' %>
	<% end %>
</div>